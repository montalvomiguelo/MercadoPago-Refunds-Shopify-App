<h3>Orders</h3>
<table class="u-full-width">
  <thead>
    <tr>
      <th>Id</th>
      <th>Payment status</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <a href="/order/<%= order.id %>">
            <%= order.id %>
          </a>
        </td>
        <td><%= order.financial_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
